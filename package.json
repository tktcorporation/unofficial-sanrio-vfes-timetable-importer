{
	"name": "calendar-event-registration",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "concurrently \"npm run dev:frontend\" \"npm run dev:server\"",
		"dev:frontend": "vite",
		"dev:server": "tsx watch src/server/index.ts",
		"build": "vite build",
		"typecheck": "tsc --noEmit",
		"lint": "concurrently \"biome lint .\" \"tsc --noEmit\"",
		"format": "biome format . --write",
		"check": "biome check .",
		"fix": "biome check --fix --unsafe",
		"preview": "vite preview"
	},
	"dependencies": {
		"@hono/node-server": "^1.8.2",
		"googleapis": "^133.0.0",
		"hono": "^4.0.5",
		"ics": "^3.8.1",
		"lucide-react": "^0.344.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/node": "^20.11.24",
		"@types/react": "^18.3.5",
		"@types/react-dom": "^18.3.0",
		"@vitejs/plugin-react": "^4.3.1",
		"autoprefixer": "^10.4.18",
		"concurrently": "^9.1.2",
		"postcss": "^8.4.35",
		"tailwindcss": "^3.4.1",
		"tsx": "^4.7.1",
		"typescript": "^5.5.3",
		"vite": "^5.4.2"
	}
}
