{
	"image": "mcr.microsoft.com/devcontainers/base:bookworm",
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"version": "latest",
			"enableNonRootDocker": "true",
			"moby": "true"
		},
		"ghcr.io/devcontainers/features/github-cli:1": {},
		"ghcr.io/devcontainers-extra/features/mise:1": {}
	},
	"forwardPorts": [5173, 8787],
	"portsAttributes": {
		"5173": {
			"label": "vite"
		},
		"8787": {
			"label": "wrangler dev"
		}
	},
	"runArgs": ["--env-file", ".devcontainer/devcontainer.env"],
	"customizations": {
		"vscode": {
			"extensions": [
				"mhutchie.git-graph",
				"editorconfig.editorconfig",
				"WakaTime.vscode-wakatime"
			],
			"files.watcherExclude": {
				"**/.git/*/**": true,
				"**/node_modules/*/**": true
			}
		}
	},
	"onCreateCommand": {
		"update-apt": ["sudo", "apt-get", "update"]
	},
	"updateContentCommand": {
		"install-packages": [
			"sudo",
			"apt-get",
			"install",
			"-y",
			"build-essential",
			"fzf",
			"ripgrep",
			"bc"
		]
	},
	"postCreateCommand": {
		"setup-mise-bash": ["bash", "-c", "echo 'eval \"$(mise activate bash)\"' >> ~/.bashrc"],
		"add-node-gpg-key": [
			"bash",
			"-c",
			"gpg --keyserver hkps://keyserver.ubuntu.com --recv-keys 5BE8A3F6C8A5C01D106C0AD820B1A390B168D356"
		],
		"trust-mise": ["mise", "trust"]
	},
	"postStartCommand": "mise install"
}
